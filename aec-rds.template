{
	"AWSTemplateFormatVersion": "2010-09-09",
	"Parameters": {
		"RDSDBInstanceName": {
			"Description": "RDS DB Instance Name",
			"Type": "String",
			"MinLength": "2",
			"MaxLength": "25",
			"Default": "AEC-dbinstance1"
		},
		"DBAdminUser": {
			"Description": "RDS Master UserName",
			"Type": "String",
			"MinLength": "2",
			"MaxLength": "25",
			"Default": "sa"
		},
		"DBAdminPassword": {
			"Description": "RDS Master Password",
			"Type": "String",
			"MinLength": "3",
			"MaxLength": "25",
			"Default": "acqueonpwd",
			"NoEcho": true
		},
		"EC2InstanceType": {
			"Type": "String",
			"Default": "Option-1a",
			"AllowedValues": ["Option-1a","Option-1b","Option-2a","Option-2b","Option-3"],
			"Description": "Refer 'AEC Capacity and Sizing section' of 'AEC Installation Guide' to select appropriate EC2 InstanceType"
		},
		"AECPrivateGroup": {
            "Type": "AWS::EC2::SecurityGroup::Id"
		},
		"AECSubnetPrivate1": {
            "Type": "AWS::EC2::Subnet::Id"
		},
		"AECSubnetPrivate2": {
            "Type": "AWS::EC2::Subnet::Id"
		}
	},
	"Mappings": {
		"EC2VolumeMap": {
			"Option-1a":{"ec2instancetype":"t2.xlarge","west3ec2instancetype":"t2.xlarge","volumesize":"200","rdsinstancetype":"db.m4.xlarge","rdsvolumesize":"200","west3rdsinstancetype":"db.r4.xlarge"},
			"Option-1b":{"ec2instancetype":"t2.2xlarge","west3ec2instancetype":"t2.2xlarge","volumesize":"500","rdsinstancetype":"db.m4.2xlarge","rdsvolumesize":"1200","west3rdsinstancetype":"db.r4.2xlarge"},
			"Option-2a":{"ec2instancetype":"m4.xlarge","west3ec2instancetype":"m5.xlarge","volumesize":"200","rdsinstancetype":"db.m4.xlarge","rdsvolumesize":"200","west3rdsinstancetype":"db.r4.xlarge"},
			"Option-2b":{"ec2instancetype":"m4.2xlarge","west3ec2instancetype":"m5.2xlarge","volumesize":"500","rdsinstancetype":"db.m4.2xlarge","rdsvolumesize":"1200","west3rdsinstancetype":"db.r4.2xlarge"},
			"Option-3":{"ec2instancetype":"m4.4xlarge","west3ec2instancetype":"m5.4xlarge","volumesize":"800","rdsinstancetype":"db.m4.2xlarge","rdsvolumesize":"2000","west3rdsinstancetype":"db.r4.2xlarge"}
		}
	},
	"Conditions": {
		"West3Region": {"Fn::Equals": ["eu-west-3", {"Ref":"AWS::Region"}]}
	  },
	"Resources": {
		"RDSSubnetGroup": {
			"Type": "AWS::RDS::DBSubnetGroup",
			"Properties": {
				"DBSubnetGroupDescription": "description",
				"SubnetIds": [{
					"Ref": "AECSubnetPrivate1"
				},
				{
					"Ref": "AECSubnetPrivate2"
				}]
			}
		},
		"RDSIAMRole": {
			"Type": "AWS::IAM::Role",
			"Properties": {
				"AssumeRolePolicyDocument": {
					"Version": "2012-10-17",
					"Statement": [{
						"Effect": "Allow",
						"Principal": {
							"Service": ["rds.amazonaws.com"]
						},
						"Action": ["sts:AssumeRole"]
					}]
				},
				"Path": "/",
				"Policies": [{
					"PolicyName": "SQLNativeBackup",
					"PolicyDocument": {
						"Version": "2012-10-17",
						"Statement": [{
							"Effect": "Allow",
							"Action": ["s3:ListBucket",
							"s3:GetBucketLocation"],
							"Resource": ["arn:aws:s3:::acqueonrdsbackup"]
						},
						{
							"Effect": "Allow",
							"Action": ["s3:GetObjectMetaData",
							"s3:GetObject",
							"s3:PutObject",
							"s3:ListMultipartUploadParts",
							"s3:AbortMultipartUpload"],
							"Resource": ["arn:aws:s3:::acqueonrdsbackup/*"]
						}]
					}
				}]
			}
		},
		"BackupAndRestoreOptionGroup": {
			"Type": "AWS::RDS::OptionGroup",		
			"DeletionPolicy" : "Delete",
			"Properties": {
				"EngineName": "sqlserver-se",
				"MajorEngineVersion": "13.00",
				"OptionGroupDescription": "MSSQL Backup And Restore OptionGroup",
				"OptionConfigurations": [{
					"OptionName": "SQLSERVER_BACKUP_RESTORE",
					"OptionSettings": [{
						"Name": "IAM_ROLE_ARN",
						"Value": {
							"Fn::GetAtt": ["RDSIAMRole",
							"Arn"]
						}
					}]
				}]
			}
		},
		"RDSDB": {
			"Type": "AWS::RDS::DBInstance",
			"DeletionPolicy" : "Delete",
			"Properties": {
				"DBInstanceIdentifier": {
					"Ref": "RDSDBInstanceName"
				},
				"OptionGroupName": {
					"Ref": "BackupAndRestoreOptionGroup"
				},
				"AllocatedStorage": {"Fn::FindInMap":["EC2VolumeMap",{"Ref": "EC2InstanceType"},"rdsvolumesize"]},
				"DBInstanceClass": {"Fn::If": ["West3Region", {"Fn::FindInMap":["EC2VolumeMap",{"Ref": "EC2InstanceType"},"west3rdsinstancetype"]}, {"Fn::FindInMap":["EC2VolumeMap",{"Ref": "EC2InstanceType"},"rdsinstancetype"]}]},
				"Engine": "sqlserver-se",
				"EngineVersion": {"Fn::If": ["West3Region", "13.00.4422.0.v1", "13.00.4451.0.v1"]},
				"LicenseModel": "license-included",
				"MultiAZ": true,
				"PubliclyAccessible": false,
				"MasterUsername": {
					"Ref": "DBAdminUser"
				},
				"MasterUserPassword": {
					"Ref": "DBAdminPassword"
				},
				"DBSubnetGroupName": {
					"Ref": "RDSSubnetGroup"
				},
				"VPCSecurityGroups": [{
					"Ref": "AECPrivateGroup"
				}],
				"StorageType" : "gp2",
				"Tags": [{
					"Key": "Name",
					"Value": {"Fn::Join" : ["-", [{"Ref":"AWS::StackName"},{"Ref": "RDSDBInstanceName"}]]}
				}]
			}
		}
	},
    "Outputs": {
		"RDSDB": {
			"Value": {
				"Fn::GetAtt": ["RDSDB","Endpoint.Address"]
			}
		}
	}
}
